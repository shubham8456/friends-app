<p style="color: green"><%= notice %></p>

<div class="mt-4 p-5 bg-secondary text-white rounded">
  <h1>
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p>
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= @friend.phone %>
  </p>
  <p>
    <strong>Email:</strong>
    <%= @friend.instagram %>
  </p>
  <div>
      <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-primary" %>
      <%= link_to "Back to friends", friends_path, class:"btn btn-primary" %>
  </div>
</div>
<br/><br/>
<%= button_to "Delete this friend", @friend, class:"btn btn-danger", method: :delete %>
